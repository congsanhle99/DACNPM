@model IEnumerable<Model.EF.SanPham>

@{
    ViewBag.Title = "Danh sách sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/AdminMaster.cshtml";
}

<section class="content container-fluid">
    <div class="box">
        <div class="box-header">
            <h3 class="box-title">Danh sách sản phẩm</h3>
            <h3>@Html.ActionLink("Tạo mới", "Create")</h3>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <table id="example1" class="table table-bordered table-hover">
                <thead>
                    <tr>
                        <th>
                            Mã sản phẩm
                        </th>
                        <th>
                            Tên sản phẩm
                        </th>
                        <th>
                            Giá mới
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Hot
                        </th>
                        <th>
                            Hình ảnh
                        </th>

                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ma)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.ten)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.gia_moi)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.so_luong)
                        </td>
                        <td>
                            @if (item.hot == true)
                            {
                                <input type="checkbox" checked>
                            }
                            else
                            {
                                <input type="checkbox">
                            }
                        </td>
                        <td>
                            <img src="~/Public/upload/product/@item.hinh_anh?cache=1" width="200" />
                        </td>
                        <td>
                            @Html.ActionLink("Sửa", "Edit", new { id = item.ma.Trim() }, new { @class = "btn btn-primary" }) |
                            @Html.ActionLink("Chi tiết", "Details", new { id = item.ma.Trim() }, new { @class = "btn btn-warning" }) |
                            @Html.ActionLink("Xóa", "Delete", new { id = item.ma.Trim() }, new { @class = "btn btn-danger" })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>

@section script{
    <script>
        $(function () {
            $('#example1').DataTable()
            $('#example2').DataTable({
                'paging': true,
                'lengthChange': false,
                'searching': false,
                'ordering': true,
                'info': true,
                'autoWidth': false
            })
        })
    </script>
}