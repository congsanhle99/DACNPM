    ViewBag.Title = "CheckOut";
    Layout = "~/Views/Shared/HomeMaster.cshtml";
}

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Uy Tín - Chất Lượng</h2>
                </div>
            </div>
        </div>
    </div>
</div> <!-- End Page title area -->

