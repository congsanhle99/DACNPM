    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                
                <div id="hotProduct"></div>
                <div id="newProduct"></div>
            </div>
            <div class="col-md-8">
                <form method="get" action="/">
                    <span>Đặt hàng thành công </span>
                    <br />
                    <a href="/Order/Details/@Model.ma">Chi tiết đơn hàng</a>
