<body class="sign-in-up">
    <section>
        <div id="page-wrapper" class="sign-in-wrapper">
            <div class="graphs">
                <div class="sign-in-form">
                    <div class="sign-in-form-top">
                        <p><span>Quên mật khẩu</p>
                    </div>
                    <div class="signin">
                        @using (Html.BeginForm("Login", "Login", FormMethod.Post))
                        {

                            <div class="log-input">
                                @if (ViewBag.Message != null)
                                {

                                    <span style="color: red;" id="loginMessage">@ViewBag.Message</span>

                                }
                                <div class="log-input-left">
                                    <input type="text" class="user" name="username" value="Your Mail" onfocus="this.value = '';" onblur="if (this.value == '') {this.value = 'Mail';}" />
                                </div>
                                <div class="clearfix"> </div>
                            </div>
                            <div class="log-input">
                                
                                <div class="clearfix"> </div>
                            </div>
                            <input type="submit" value="Xác nhận">
                        }
                    </div>

                </div>
            </div>
        </div>
    </section>

    <script src="~/Public/admin2/js/jquery.nicescroll.js"></script>
    <script src="~/Public/admin2/js/scripts.js"></script>
    <!-- Bootstrap Core JavaScript -->
    <script src="~/Public/admin2/js/bootstrap.min.js"></script>
</body>
