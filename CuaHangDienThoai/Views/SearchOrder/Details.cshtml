@model Model.EF.HoaDonBan
@using CuaHangMayTinh.Areas.Admin.Models;
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/HomeMaster.cshtml";
}

<div class="product-big-title-area">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="product-bit-title text-center">
                    <h2>Chi tiết hóa đơn</h2>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="single-product-area">
    <div class="zigzag-bottom"></div>
    <div class="container">
        <div class="row">
            <h1>Chi tiết hóa đơn @Model.ma</h1>
        </div>
        <div class="row">
            <table class="table">
                <thead>
                    <tr>
                        <th>
                            Mã sản phẩm
                        </th>
                        <th>
                            Tên sản phẩm
                        </th>
                        <th>
                            Đơn giá
                        </th>
                        <th>
                            Số lượng
                        </th>
                        <th>
                            Hình ảnh
                        </th>

                        <th>
                            Tổng cộng
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.ChiTietHoaDonBans)
                    {
                        <tr>
                            <td>
                                @item.ma_san_pham
                            </td>
                            <td>
                                @item.SanPham.ten
                            </td>
                            <td>
                                @item.don_gia
                            </td>
                            <td>
                                @item.so_luong
                            </td>
                            <td>
                                <img src="~/Public/upload/product/@item.SanPham.hinh_anh?cache=1" width="200" />
                            </td>
                            <td>
                                @(item.don_gia * item.so_luong)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>