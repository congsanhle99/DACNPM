    <script>
        function thenLoadMenu() {
            console.log('every thing oki');
            console.log($('#menu li'));
            $('#menu li').removeClass("active");
            var list = window.location.href.split('/');
            if (list.indexOf('Categories') > -1) {
                var index = list[list.length - 1]
                $($('#menu li')[index]).addClass("active");
            } else if (list.indexOf('Contact') > -1) {
                $($('#menu li')[$('#menu li').length - 1]).addClass("active");
            } else {
                $($('#menu li')[0]).addClass("active");
            }
        }
        $(document).ready(function () {
            $('#menu').load('/Partial/Categories', thenLoadMenu);
            $('.site-branding-area').load('/Partial/Cart');
        })
    </script>

